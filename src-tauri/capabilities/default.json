{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    {
      "identifier": "fs:read-all",
      "allow": [
        {
          "path": "$HOME/.vxfetch/"
        },
        {
          "path": "$HOME/.vxfetch/**"
        }
      ]
    },
    "os:allow-family",
    "menu:allow-new",
    "menu:allow-popup",
    "webview:allow-set-webview-zoom",
    "global-shortcut:allow-register",
    "global-shortcut:allow-register-all"
  ]
}